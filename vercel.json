{
    "version": 2,
    "builds": [
      {
        "src": "public/index.php",
        "use": "@vercel/php",
        "config": {
          "maxLambdaSize": "2048"
        }
      },
      {
        "src": "resources/js/app.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "public/build",
          "buildCommand": "npm run production"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/public/index.php"
      }
    ]
  }
